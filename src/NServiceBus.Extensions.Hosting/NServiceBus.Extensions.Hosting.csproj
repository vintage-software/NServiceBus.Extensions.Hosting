<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <SignAssembly>false</SignAssembly>
  </PropertyGroup>

  <PropertyGroup>
    <Description>Easy integration with Microsoft.Extensions.Hosting for NServiceBus</Description>
    <PackageId>NServiceBus.Extensions.Hosting.MultiHosting</PackageId>
    <Version>1.0.0-MultiHosting-1</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <RepositoryUrl>https://github.com/vintage-software/NServiceBus.Extensions.Hosting</RepositoryUrl>
    <PackageProjectUrl>https://github.com/vintage-software/NServiceBus.Extensions.Hosting</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="3.0.0" />
    <PackageReference Include="NServiceBus" Version="[7.2.0, 8.0.0)" />
    <PackageReference Include="Particular.CodeRules" Version="0.2.1" PrivateAssets="All" />
  </ItemGroup>

</Project>
